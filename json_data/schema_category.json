{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {"type": "string", "pattern": "^category:[a-z0-9_]+$"},
    "name": {"type": "string"},
    "description": {"type": "string"},
    "parent_category": {
      "oneOf": [
        {"type": "null"},
        {"$ref": "#/definitions/category_ref"}
      ]
    }
  },
  "required": ["id", "name"],
  "definitions": {
    "category_ref": {"type": "string", "pattern": "^category:[a-z0-9_]+$"}
  }
}